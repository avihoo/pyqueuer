[tox]
envlist = py27, py34, pep8

[testenv]
install_command = pip3 install -U {opts} {packages}
deps = -r{toxinidir}/requirements.test.txt
       -r{toxinidir}/requirements.txt
commands = nosetests --with-coverage --cover-erase --cover-package=ca --where=ca

[testenv:pep8]
basepython = python3.4
deps ={[testenv]deps}
commands =flake8

[flake8]
ignore = E501,F401,E402
exclude = build/*, ./.tox/*
